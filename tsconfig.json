{
    "compilerOptions": {
        "target": "ES6",
        "module": "CommonJS",
        "outDir": "./dist",
        "rootDir": "./src",
        "strict": true,
        "esModuleInterop": true,
        "noEmitOnError": false, // Allow output even if there are errors
        "skipLibCheck": true, // Skip type checking for declaration files (node_modules)
        "typeRoots": ["node_modules/@types", "types"]
    },
    "include": ["src", "types"],
    "exclude": ["node_modules"]
}
